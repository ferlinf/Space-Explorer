<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".HomeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/space"
        tools:context=".MainActivity">



        <TextView
            android:id="@+id/judul"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Space Explorer"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/judul"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Let's explore space!"
            android:fontFamily="@font/poppindlight"
            android:textSize="25sp"
            android:textColor="@color/white"/>



        <TextView
            android:id="@+id/planets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="20dp"
            android:text="Planets"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/poppinsextrabold"
            android:textColor="@color/white"
            />

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/planets"
            android:rowCount="4"
            android:columnCount="2">

            <!--Bumi-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/spacecadet">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/earttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Earth"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/spacecadet"/>


                    <TextView
                        android:id="@+id/earthdec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/earttitle"
                        android:text="Bumi "
                        android:textColor="@color/white"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bumi"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:paddingEnd="8dp"
                        android:paddingTop="8dp"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Merkurius-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/spacecadet">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">




                    <Button
                        android:id="@+id/merkuriustitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Mercury"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/spacecadet"/>

                    <TextView
                        android:id="@+id/merkuriusdec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Merkurius"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/merkurius" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--venus-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/spacecadet"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">



                    <Button
                        android:id="@+id/venustitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Venus"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/spacecadet"/>
                    <TextView
                        android:id="@+id/venusdec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Venus"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/venus"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Mars-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/spacecadet"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">


                    <Button
                        android:id="@+id/marstitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Mars"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/spacecadet"/>
                    <TextView
                        android:id="@+id/marsdec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mars"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mars"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Jupiter-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/spacecadet"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">


                    <Button
                        android:id="@+id/jupitertitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Jupiter"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/spacecadet"/>
                    <TextView
                        android:id="@+id/jupiterdec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jupiter"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jupiter"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Saturnus-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/spacecadet"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">


                    <Button
                        android:id="@+id/saturnustitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Saturnus"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/spacecadet"/>
                    <TextView
                        android:id="@+id/saturnusdec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturnus"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/saturnus"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Uranus-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/spacecadet"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">


                    <Button
                        android:id="@+id/uranustitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Uranus"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/spacecadet"/>
                    <TextView
                        android:id="@+id/uranusdec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uranus"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/uranus"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Neptunus-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/spacecadet"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:layout_gravity="center_vertical|center_horizontal">


                    <Button
                        android:id="@+id/neptunustitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Neptunus"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/spacecadet"/>
                    <TextView
                        android:id="@+id/neptunusdec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Neptunus"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/neptunus"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </GridLayout>

        <TextView
            android:id="@+id/mostpopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grid"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Most Popular"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/galaxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/mostpopular"
            android:text="Galaxy"
            android:fontFamily="@font/poppinsextrabold"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <HorizontalScrollView
            android:id="@+id/galaxyscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/galaxy"
            android:layout_marginTop="-34dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/milkyway" />

                <ImageView
                    android:id="@+id/Andromeda"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/andromeda" />

                <ImageView
                    android:id="@+id/Messier"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/messiergalaxy" />

                <ImageView
                    android:id="@+id/therose"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/therose" />

            </LinearLayout>


        </HorizontalScrollView>

        <TextView
            android:id="@+id/spaceobject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/galaxyscroll"
            android:text="Space Object"
            android:fontFamily="@font/poppinsextrabold"
            android:textColor="@color/white"
            android:textSize="30dp"/>

        <HorizontalScrollView
            android:id="@+id/objectscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spaceobject">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="9dp"
                    android:layout_marginLeft="20dp">


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="200dp"
                            android:layout_height="160dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sun" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dp"
                            android:text="Sun"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="9dp"
                    android:layout_marginLeft="20dp">


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="200dp"
                            android:layout_height="160dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/satelit" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dp"
                            android:text="Satelit"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="9dp"
                    android:layout_marginLeft="20dp">


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="200dp"
                            android:layout_height="160dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/comet" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dp"
                            android:text="Comet"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="9dp"
                    android:layout_marginLeft="20dp">


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="200dp"
                            android:layout_height="160dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/star" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dp"
                            android:text="Star"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>
        </HorizontalScrollView>








        <ViewFlipper
            android:id="@+id/view_flipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/objectscroll"
            android:background="@drawable/bottom_navigation_background"
            app:menu="@menu/bottom_navigation_menu" />




    </RelativeLayout>
</ScrollView>